    if df[col].isna().any():
        print(f"Filling missing numeric values in '{col}' with median")

for col in categorical_cols:
    if df[col].isna().any():
        print(f"Filling missing categorical values in '{col}' with mode")

monthly_sales = df_sorted.groupby("date")["sales"].mean()

plt.figure()
plt.plot(monthly_sales.index, monthly_sales.values, label="Average Sales")
plt.title("Average Monthly Sales Trend")
plt.xlabel("Date")
plt.ylabel("Average Sales")
plt.legend()
plt.tight_layout()
plt.show()


